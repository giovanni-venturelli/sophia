{
    "name": "giovanni-venturelli/sophia",
    "type": "library",
    "description": "Sophia is a lightweight component-based PHP framework with Twig.",
    "license": "MIT",
    "keywords": ["php", "framework", "component", "router", "twig", "angular-like"],
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.22",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_sqlite": "*"
    },
    "autoload": {
        "psr-4": {
            "Sophia\\Router\\": "core/router/",
            "Sophia\\Router\\Models\\": "core/router/models/",
            "Sophia\\Component\\": "core/component/",
            "Sophia\\Injector\\": "core/injector/",
            "Sophia\\Form\\": "core/form/",
            "Sophia\\Database\\": "core/database/",
            "Sophia\\Database\\Drivers\\": "core/database/drivers/"
        }
    },
    "authors": [
        {
            "name": "Giovanni"
        }
    ]
}
