<footer class="main-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                {{ serviceCount }}
                <h3>{{ companyName }}</h3>
                <p>Building amazing things with PHP and Twig</p>
            </div>

            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    {% for link in quickLinks %}
                        <li>
                            <a href="{{ link.url }}">{{ link.label }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="footer-section">
                <h4>Follow Us</h4>
                <div class="social-links">
                    {% for social in socialLinks %}
                        <a href="{{ social.url }}"
                           title="{{ social.name }}"
                           class="social-link">
                            {{ social.icon }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>{{ copyrightText }}</p>
        </div>
    </div>
</footer>

