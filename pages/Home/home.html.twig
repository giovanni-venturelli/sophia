{% set slotContent %}
    <slot name="easyProjection">
        <div style="color: red">this</div>
        <div>is</div>
        <div>a</div>
        <div>test</div>
    </slot>
{% endset %}
{{ component('app-header', {
    title: pageTitle
}, slotContent) }}

<section class="hero">
    <div class="container">
        <div class="welcome">{{ welcomeMessage }}</div>
        <h1>{{ pageTitle }} id: {{ id }}</h1>
        <p>{{ subtitle }}</p>
        <p>Service count: {{ serviceCount }}</p>
    </div>
</section>


<section class="stats-section">
    <div class="container">
        <div class="stats">
            {% for stat in stats %}
                <div class="stat-card">
                    <div class="value">{{ stat.value }}</div>
                    <div class="label">{{ stat.label }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="features">
    <div class="container">
        <h2>Why Choose Us?</h2>
        <p class="subtitle">
            Abbiamo {{ featuresCount }} incredibili features per te
        </p>

        <div class="features-grid">
            {% for feature in features %}
                {{ component('app-feature-card', {
                    icon: feature.icon,
                    title: feature.title,
                    description: feature.description,
                    color: feature.color,
                    isFirst: loop.first,
                    isLast: loop.last,
                    index: loop.index
                }) }}
            {% else %}
                <p>Nessuna feature disponibile</p>
            {% endfor %}
        </div>
    </div>
</section>

